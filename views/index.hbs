    <script>
        function addToCart(proid){
            $.ajax({
                url:'/add-to-cart/'+proid,
                method:'get',
                success:(response)=>{
                    if(response.status)
                    {
                        
                        let count=$('#cartcount').html()
                        if(count){
                        count=parseInt(count)+1}
                        else{
                            count=1
                        }
                        $('#cartcount').html(count)
                    }
                    else
                    window.location.href = "/login"
                }
            })

        }
    </script>
    <script>
        function buyNow(proid){
            $.ajax({
                url:'/add-to-cart/'+proid,
                method:'get',
                success:(response)=>{
                    if(response.status)
                    {
                        window.location.href = "/cart"
                    }
                    else
                    window.location.href = "/login"
                }
            })

        }
      
    </script>
